<script is:inline>
  // Script robusto para eugenia & Gonzales
  document.addEventListener('DOMContentLoaded', () => {
    
    // --- 1. LÓGICA DE SCROLL ---
    const header = document.querySelector('header'); // Seleccionamos la etiqueta header directamente
    const scrollThreshold = 10;

    function handleScroll() {
      if (window.scrollY > scrollThreshold) {
        header.classList.add('is-scrolled');
      } else {
        header.classList.remove('is-scrolled');
      }
    }

    // Escuchar scroll
    window.addEventListener('scroll', handleScroll, { passive: true });
    // Ejecutar al inicio por si ya estamos abajo
    handleScroll();


    // --- 2. LÓGICA DE MENÚ MÓVIL ---
    const btnOpen = document.getElementById('btn-open');
    const btnClose = document.getElementById('btn-close');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-link');

    function openMenu() {
      mobileMenu.classList.remove('translate-x-full');
      document.body.style.overflow = 'hidden'; // Bloquear scroll
    }

    function closeMenu() {
      mobileMenu.classList.add('translate-x-full');
      document.body.style.overflow = ''; // Reactivar scroll
    }

    if (btnOpen) btnOpen.addEventListener('click', openMenu);
    if (btnClose) btnClose.addEventListener('click', closeMenu);
    
    // Cerrar al hacer click en un link
    mobileLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });
  });
</script>

